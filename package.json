    "changeset:publish": "pnpm changeset:prepublish && changeset publish",
    "changeset:version": "changeset version",
    "format": "biome format . --write",
    "lint": "biome check .",
    "test": "vitest",
    "typecheck": "pnpm run --r --filter \"./packages/**\" typecheck"
  }
