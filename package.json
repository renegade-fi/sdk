{
  "private": true,
  "devDependencies": {
    "@biomejs/biome": "1.7.2",
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.12.7",
    "happy-dom": "^12.2.1",
    "typescript": "^5.4.2",
    "vite-plugin-top-level-await": "^1.4.1",
    "vite-plugin-wasm": "^3.3.0",
    "vitest": "^1.5.0"
  },
  "scripts": {
    "build": "pnpm run --r --filter \"./packages/**\" build",
    "build:wasm": "cd wasm && ./build.sh && ./build.sh --node",
